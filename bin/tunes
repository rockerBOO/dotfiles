#!/usr/bin/env bash
#
# tunes
# https://github.com/brettbuddin/tunes
#
# Basic control of iTunes via terminal.
#

usage() {
  echo "usage:"
  echo "  tunes play"
  echo "  tunes stop"
  echo "  tunes pause"
  echo "  tunes status"
  echo "  tunes mute"
  echo "  tunes unmute"
}

check_for_running_itunes() {
  if ! ps ax | grep '[i]Tunes .*' > /dev/null
  then
	echo "iTunes not running."
	exit 1
  fi
}

main() {
    if [ $# -lt 1 ]; then
        usage
        exit 1
    fi

    local SUBCOMMAND="$1"
    shift

    if ! type "cmd_$SUBCOMMAND" >/dev/null 2>&1; then
        echo "Unknown subcommand: '$SUBCOMMAND'"
        usage
        exit 1
    fi

	check_for_running_itunes
        
    cmd_$SUBCOMMAND "$@"
}

cmd_play() {
  osascript -e 'tell application "iTunes" to play'
}

cmd_stop() {
  osascript -e 'tell application "iTunes" to stop'
}

cmd_pause() {
  osascript -e 'tell application "iTunes" to pause'
}

cmd_status() {
  local artist track status=

  status=`osascript -e 'tell application "iTunes" to player state as string'`

  if [ $status = "playing" ]; then

	artist=`osascript -e 'tell application "iTunes" to artist of current track as string'`
	track=`osascript -e 'tell application "iTunes" to name of current track as string'`

	echo "$artist - $track"
  fi
}

cmd_mute() {
  osascript -e 'tell application "iTunes" to set mute to true'
}

cmd_unmute() {
  osascript -e 'tell application "iTunes" to set mute to false'
}

main "$@"
